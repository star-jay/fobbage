#!/usr/bin/env bash

# Exit immediately if a command exits with a non-zero status.
set -e

cd "$(dirname "$0")/.."

# Flake everything
poetry run flake8
# Lint frontend

if [ "$1" == "--mini" ]; then
    # Run minimal pytest
    shift
    poetry run pytest "$@"
else
    # Run pytest with coverage and any arguments given
    poetry run pytest --cov=. --cov-report=html --cov-report=term "$@"
fi

cd "$(dirname "$0")/.."
# npm run test:unit
# npm run lint
