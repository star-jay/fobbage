
#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

echo "==> Removing fobbage DB if existing"
dropdb fobbage --if-exists

# ignore the following error
set +e

echo "==> Pulling from $1"
heroku pg:pull DATABASE_URL fobbage --app fobbage

set -e

scripts/update

echo "==> Migration successful!"
echo "==> TODO: Check if data is valid"
